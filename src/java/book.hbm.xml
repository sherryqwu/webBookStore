<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
  <class name="com.me.pojo.Book" table="BookStore.book">
    <id column="id" name="id" type="int">
      <generator class="native"/>
    </id>
    <property column="name" name="name" type="string" unique="true"/>
    <property column="typeid" name="typeid" type="int" unique="true"/>
    <property column="price" name="price" type="float" unique="true"/>
    <property column="descript" name="descript" type="string" unique="true"/>
    <property column="contents" name="contents" type="string" unique="true"/>
    <property column="imagefile" name="imagefile" type="string" unique="true"/>

  </class>
</hibernate-mapping>
